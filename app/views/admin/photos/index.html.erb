<h1>Listing photos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @admin_photos.each do |admin_photo| %>
      <tr>
        <td><%= admin_photo.name %></td>
        <td><%= link_to(image_tag(admin_photo.image.thumb('64x64!').url, alt: nil), admin_photo) if admin_photo.image_stored? %></td>
        <td><%= link_to 'Show', admin_photo, class:'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_photo_path(admin_photo), class: 'btn btn-warning' %> </td>
        <td><%= link_to 'Destroy', admin_photo, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_admin_photo_path %>
